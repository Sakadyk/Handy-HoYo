<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="50px"
    android:gravity="center"
    tools:context=".DailyLogin">

    <ImageView
        android:layout_width="500px"
        android:layout_height="500px"
        android:src="@drawable/derpaimon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/daily_login"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/genshin2"
            android:textColor="@color/white"
            android:text="Daily\nLogin"
            android:layout_marginRight="2dp"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/redemption_code"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/genshin3"
            android:textColor="@color/white"
            android:text="Redemption\nCode"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/gi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/genshin"
            android:gravity="center"
            android:text="Genshin\nImpact"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Button
            android:id="@+id/hsr"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/genshin"
            android:gravity="center"
            android:text="Honkai:\nStar Rail"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Button
            android:id="@+id/hi3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:backgroundTint="@color/genshin"
            android:gravity="center"
            android:text="Honkai\nImpact 3rd"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </LinearLayout>

</LinearLayout>
