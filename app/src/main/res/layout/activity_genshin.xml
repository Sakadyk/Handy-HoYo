<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Genshin">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/genshinbanner"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:alpha="0.85"
            android:id="@+id/banner_img"
            android:importantForAccessibility="no" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_above="@id/app_name">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    tools:ignore="UselessParent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/gi"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/genshin4">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="50dp"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/genshin4"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/derpy"
                                android:importantForAccessibility="no" />
                        </androidx.cardview.widget.CardView>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/hsr"
                        app:cardCornerRadius="11dp"
                        android:layout_marginStart="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hsr48"
                            android:importantForAccessibility="no" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/hi3"
                        app:cardCornerRadius="11dp"
                        android:layout_marginStart="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hi348"
                            android:importantForAccessibility="no" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/tot"
                        app:cardCornerRadius="11dp"
                        android:layout_marginStart="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/tot48"
                            android:importantForAccessibility="no" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/zzz"
                        app:cardCornerRadius="11dp"
                        android:layout_marginStart="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/zzz48"
                            android:importantForAccessibility="no" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/hoyo"
                        app:cardCornerRadius="11dp"
                        android:layout_marginStart="25dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hoyo48"
                            android:importantForAccessibility="no" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </FrameLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/genshin_impact"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:layout_alignBottom="@id/banner_img"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/genshin"
        android:layout_below="@id/app_bar"
        android:id="@+id/divider_1" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genshin_app"
        android:layout_below="@id/app_bar">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_in_gi"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/checkin"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/check_in"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/redeem_code_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/check_in_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/redeem"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/redemption_code"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/uid_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/redeem_code_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/uid"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/user_id"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/battle_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/uid_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/battle"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/battle_chronicle"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/battle_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/map"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/interactive_map"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wiki_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/map_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/wiki"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/genshin_impact_wiki"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/calc_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/wiki_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/calc"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enhancement_calculator"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/keqing_mains"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/calc_gi"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/kqm"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kqm_guide_and_tc"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/enka_gi"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/keqing_mains"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/enka"
                        android:importantForAccessibility="no" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/enka_network"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </RelativeLayout>

        </FrameLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/genshin"
        android:layout_below="@id/genshin_app"
        android:id="@+id/divider_2" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="@color/genshin2"
        android:progressTint="@color/genshin4"
        android:layout_below="@id/genshin_app"
        android:visibility="invisible" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider_2"
        android:layout_above="@id/divider_3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/genshin"
        android:id="@+id/divider_3"
        android:layout_above="@id/nav_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/nav_layout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/web_back"
            android:importantForAccessibility="no" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_arrow_forward_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/web_forward"
            android:importantForAccessibility="no" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_home_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/web_home"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/web_refresh"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:src="@drawable/baseline_refresh_24"
            android:importantForAccessibility="no" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_share_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            android:padding="10dp"
            android:id="@+id/web_share"
            android:importantForAccessibility="no" />

    </LinearLayout>

</RelativeLayout>
