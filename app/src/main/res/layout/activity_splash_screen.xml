<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="30dp"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/derpaimon"
        android:layout_above="@id/gif"
        android:contentDescription="@string/paimon_derp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/progress_fields">

        <TextView
            android:id="@+id/progresstext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/genshin"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="94dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:scaleType="fitStart"
        android:src="@drawable/knuckles"
        android:layout_above="@id/progressbar"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="20dp"
        android:progressBackgroundTint="@color/genshin2"
        android:progressTint="@color/genshin"
        android:layout_above="@id/progress_fields"/>

</RelativeLayout>